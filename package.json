{
  "name": "create-viant-app",
  "version": "2.0.1",
  "description": "Create modern Web apps with Vite - choose between TypeScript or JavaScript templates with optional Tailwind CSS and PWA support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "create-viant-app": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "docs",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run index.ts",
    "build": "bun build index.ts --outdir dist --target node",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run test && npm run build",
    "release": "npm version patch && npm publish && git push --follow-tags",
    "release:minor": "npm version minor && npm publish && git push --follow-tags",
    "release:major": "npm version major && npm publish && git push --follow-tags"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "prompts": "^2.4.2",
    "chalk": "^5.4.1",
    "ora": "^8.1.1",

    "gradient-string": "^2.0.2",
    "validate-npm-package-name": "^5.0.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",

    "@types/fs-extra": "^11.0.4",
    "@types/gradient-string": "^1.1.5",
    "@types/prompts": "^2.4.9",
    "typescript": "^5.7.2",
    "vitest": "^3.0.2",
    "fast-check": "^3.23.2"
  },
  "keywords": [
    "react",
    "vue",
    "svelte",
    "solid",
    "preact",
    "vite",
    "typescript",
    "javascript",
    "cli",
    "template",
    "scaffold",
    "create-app",
    "boilerplate",
    "starter",
    "tailwind",
    "pwa",
    "modern",
    "fast"
  ],
  "author": "Rakha VIantoni",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rakhaviantoni/create-viant-app.git"
  },
  "homepage": "https://github.com/rakhaviantoni/create-viant-app#readme",
  "bugs": {
    "url": "https://github.com/rakhaviantoni/create-viant-app/issues"
  }
}